
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Assets/Login/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Assets/Login/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Assets/Login/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Assets/Login/vendor/bootstrap-datepicker/css/datepicker3.css" />
    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Assets/Login/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Assets/Login/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Assets/Login/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Assets/Login/vendor/modernizr/modernizr.js"></script>
   <style>
       .btn-login 
       {
           background-color: #9a55ff;
           font-size: 16px;
           height: 40px;
           color: white;
       }
        .btn-login:hover {
            background-color: #512c87;
            font-size: 16px;
            height: 40px;
            color: white;
            transition: all 1s;
        }
        .btn-login:active {
            background-color: #512c87;
            font-size: 16px;
            height: 40px;
            color: white;
            transition: all 1s;
        }
        .btn-login:focus {
            background-color: #512c87;
            font-size: 16px;
            height: 40px;
            color: white;
            transition: all 1s;
        }
   </style>
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <div class="panel panel-sign" style="background-color:#9a55ff">
                <div class="panel-title-sign mt-xl text-left" style="height:60px">
                    <h4 style="color:white;padding-top:25px;padding-left:30px">Đăng nhập thị trường dịch vụ AI</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group mb-lg">
                        <label>Tên đăng nhập</label>
                        <div class="input-group input-group-icon">
                            <input name="username" id="id_user" type="text" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Mật khẩu</label>
                        </div>
                        <div class="input-group input-group-icon">
                            <input name="pwd" type="password" id="id_password" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="checkbox-custom checkbox-default">
                                <input id="RememberMe" name="rememberme" type="checkbox" />
                                <label for="RememberMe">Ghi nhớ</label>
                            </div>
                        </div>
                        <div class="col-sm-4 text-right">
                            
                            <button type="submit" class="btn btn-login hidden-xs" id="id_btn_DangNhap">Đăng nhập</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Assets/Login/vendor/jquery/jquery.js"></script>
    <script src="~/Assets/Login/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Assets/Login/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Assets/Login/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Assets/Login/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Assets/Login/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/Assets/Login/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Assets/Login/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Assets/Login/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Assets/Login/javascripts/theme.init.js"></script>
    <script>

        $(document).ready(function () {

            $('#id_btn_DangNhap').click(function (e) {
                var username = $('#id_user').val();
                var password = $('#id_password').val();
                $.ajax({
                    type: "POST",
                    url: "/Login/Login",
                    data: { username: username, password: password },
                    success: function (json) {
                        if (json.status) {
                            window.location.href = json.redirectUrl;
                        }
                        else {
                            alert("Thông tin đăng nhập sai!");
                        }
                    }
                })
            })
        })
    </script>
</body>
</html>


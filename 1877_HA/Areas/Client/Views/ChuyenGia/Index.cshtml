@model IEnumerable<_1877_HA.Models.tb_ChuyenGia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}
@section Header
{
    <style>
        .img_chuyengia {
            width: 100%;
            height:200px;
        }
    </style>
}
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#id_chuyengia_client").addClass("active");
        })
    </script>
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-heading">
                <h4>Danh sách các chuyên gia</h4>
                <p>Có nhiều năm kinh nghiệm trong các lĩnh vực về y tế, phân tích mã độc</p>
            </div>
        </div>
        @{
            int temp = 0;
            foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="service-item">
                        <img class="img_chuyengia" src="~/Assets/ImageChuyenGia/@item.Image" />
                        <hr />
                        <h5>Tên chuyên gia: @Html.DisplayFor(modelItem => item.TenChuyenGia)</h5>
                        <p>Trình độ: @Html.DisplayFor(modelItem => item.TrinhDo)</p>
                        <p>Mô tả: @Html.DisplayFor(modelItem => item.MoTa)</p>

                        <a href="#" class="gradient-button" id="id_chonchuyengia_@item.ID" style="float:right;margin-top:10px">Lựa chọn</a>
                        <script>
                            $(document).ready(function () {
                                $('#id_chonchuyengia_@item.ID').click(function (e) {
                                    var id =@item.ID;
                                    window.location.href = "/Client/ChuyenGia/GuiChuyenGia?id="+id;
                                })
                            })
                        </script>
                    </div>

                </div>

                temp++;
                if (temp % 3 == 0)
                {

                 @:<br />

                }

            }
        }

    </div>
</div>

